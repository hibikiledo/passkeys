{
	"compilerOptions": {
		"lib": ["ESNext", "DOM"],
		"module": "ESNext",
		"target": "es2019",
		"moduleResolution": "Bundler",
		"moduleDetection": "force",
		"composite": true,
		"strict": true,
		"downlevelIteration": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"allowJs": true,
		"outDir": "dist"
	},
	"include": ["src/**/*"]
}
